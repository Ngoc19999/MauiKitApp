<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKit.Views.DemoApp.SigninPage"
             xmlns:controls="clr-namespace:MauiKit.Controls"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="{DynamicResource BasePageColor}"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">

    <ScrollView VerticalScrollBarVisibility="Never">
        <Grid RowDefinitions="*, Auto">

            <Grid
                Padding="30"
                HorizontalOptions="Center"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                RowSpacing="10"
                VerticalOptions="Center"
                Margin="0,-110,0,0">

                <Border
                    Padding="0"
                    Background="{DynamicResource PrimaryColor}"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    Shadow="{StaticResource CommonShadow}"
                    StrokeShape="{RoundRectangle CornerRadius=16}"
                    WidthRequest="80">

                    <controls:RoundedCornerImage
                        Background="{DynamicResource White}"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        Source="logo.png"
                        Stroke="{DynamicResource PrimaryColor}"
                        StrokeShape="{RoundRectangle CornerRadius=30}"
                        StrokeThickness="1"
                        VerticalOptions="Center"
                        WidthRequest="60" />
                </Border>

                <Label
                    Grid.Row="1"
                    FontFamily="BoldFont"
                    FontSize="20"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource Title1}"
                    Text="MAUI KIT"
                    TextColor="{DynamicResource PrimaryColor}" />

                <Grid Grid.Row="2">
                    <ffimageloading:CachedImage
                        Aspect="AspectFit"
                        DownsampleToViewSize="True"
                        HeightRequest="{OnIdiom Phone='170',
                                                Desktop='350',
                                                Tablet='230'}"
                        Source="bg_paint.png"
                        VerticalOptions="Center" />

                    <Label
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource CustomTitle}"
                        Text="{localization:Translate StringAppWelcomeTitle}"
                        TextColor="{DynamicResource BaseTextColor}"
                        VerticalOptions="Center" />

                </Grid>

                <Label
                    Grid.Row="3"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource CustomBody}"
                    Text="{localization:Translate StringAppWelcomeSubtitle}"
                    TextColor="{DynamicResource BaseTextColor}"
                    TranslationY="-20" />

                <Border
                    Grid.Row="4"
                    Padding="15,0"
                    Background="{DynamicResource BasePageColor}"
                    HeightRequest="30"
                    HorizontalOptions="Center"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeShape="{RoundRectangle CornerRadius='8'}"
                    StrokeThickness="1.2"
                    VerticalOptions="Center">
                    <Label
                        FontFamily="SemiBoldFont"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="{localization:Translate ButtonSignin}"
                        TextColor="{DynamicResource PrimaryColor}"
                        VerticalOptions="Center" />
                </Border>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="{OnIdiom Desktop='1*, 8*, 1*', Phone='Auto, *, Auto', Tablet='1*, 8*, 1*', Default='Auto, *, Auto'}">
                <StackLayout
                    Grid.Column="1"
                    Padding="30,0,30,20"
                    HorizontalOptions="Fill"
                    Spacing="15"                  
                    VerticalOptions="Start"
                    >
                    <Frame CornerRadius="22" Padding="0">
                        <Entry
                        Placeholder="{localization:Translate StringEnterUsername}"
                        BackgroundColor="LightGray"                                            
                        FontFamily="MediumFont"
                        FontSize="14"
                        HeightRequest="50"    
                        Text="{Binding FullName, Mode=TwoWay}"
                        TextColor="{DynamicResource BaseTextColor}" />
                    </Frame>

                    <Frame CornerRadius="22" Padding="0">   
                        <Entry
                        Placeholder="{localization:Translate StringEnterPassword}"
                        BackgroundColor="LightGray"                                            
                        FontFamily="MediumFont"
                        FontSize="14"
                        HeightRequest="50"    
                        Text="{Binding Password, Mode=TwoWay}"
                        IsPassword="True"
                        TextColor="{DynamicResource BaseTextColor}" />
                    </Frame>
                    <controls:ButtonLoading 
                         BackgroundColor="{DynamicResource Primary35Color}"
                         BorderColor="{DynamicResource Primary50Color}"                                                
                         CornerRadius="10"                      
                         HeightRequest="40"
                         WidthRequest="150"
                         Text="{localization:Translate ButtonLogin}"                        
                         Command="{Binding LoginCommand}"
                         IsInProgress="{Binding IsLoggingIn}"/>
                    <Label 
                        Text="Chưa có tài khoản. Tạo Tài Khoản Ngay"
                        FontFamily="MediumFont"
                        FontSize="14"
                        HorizontalOptions="Center"
                        TextColor="{DynamicResource BaseTextColor}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label 
                        Text="{localization:Translate StringForgotPassword}"    
                        FontFamily="MediumFont"
                        FontSize="14"
                        HorizontalOptions="Center"
                        TextColor="{DynamicResource BaseTextColor}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                            Command="{Binding NavigateToForgotPasswordCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>

