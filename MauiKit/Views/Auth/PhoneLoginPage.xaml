<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKit.Views.Auth.PhoneLoginPage"
             Title="PhoneLoginPage">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Nhập số điện thoại của bạn:" FontSize="18" />
        <Entry Placeholder="+84xxxxxxxxx" Keyboard="Telephone" Text="{Binding PhoneNumber}" />
        <Button Text="Gửi mã OTP" Command="{Binding SendOtpCommand}" />
    </VerticalStackLayout>
</ContentPage>